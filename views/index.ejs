<html>
    <%- include('./partials/head.ejs'); %>
    <body>
        <%- include('./partials/nav.ejs'); %>
        <div class="blogs content">
            <h2>All Blogs</h2>
            <% if(blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <a class="single" href="/blogs/<%= blog._id %>">
                        <h3 class="title"><%=blog.title%></blog></h3>
                        <h4 class="title"><%=blog.snippet%></blog></h4>
                        <p class="snippet"><%=blog.body%></p>
                        <hr width="100%">
                    </a>
                <% }); %>
            <% } %>
        </div>
    </body>
</html>